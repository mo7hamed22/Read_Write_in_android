<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Target"
    android:layout_margin="20dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:text="Name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getUser"
        android:text="User"
        android:textSize="20sp"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getPass"
        android:text="Pass"
        android:textSize="20sp"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="write on SharedPref and clear"
            android:id="@+id/write"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read Drom SharedPref"
            android:id="@+id/Read"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="write on Intranalstorge and clear"
            android:id="@+id/internal_write"
            android:layout_margin="20dp"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Read from intranal"
            android:id="@+id/internal_Read"
            android:layout_margin="20dp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="write on Sql and clear"
            android:id="@+id/sqlite_write"
            android:layout_margin="20dp"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Read from sqlite"
            android:id="@+id/sqlite_Read"
            android:layout_margin="20dp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>